<h3><%= @projeto.Nome %></h3>
<ul class="tarefas">
	
<% date = nil %>
	
<% for tarefa in @projeto.tarefas.all(:order => "created_at desc") %>
	
	<% if tarefa.created_at.to_date != date %>
	
	<% date = tarefa.created_at.to_date %>
	
	<li>
		<span id="date"><%= l tarefa.created_at.to_date, :format => :dayweek %></span>
	</li>
	
	<% end %>
	
	<li id="item">
		<span id="comment">Tarefa</span>
		<span id="ctr"><%= link_to tarefa.Nome, projeto_tarefa_path(@projeto, tarefa) %></span>
		<span id="sign"></span>
	</li>
	
<% end #for %>

</ul>