<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Seek - Gerenciador de Projetos</title>
		<link rel="stylesheet" type="text/css" href="/stylesheets/layout.css"/>
		<script type="text/javascript" src="/javascripts/jquery-1.3.1.min.js"></script>
	</head>
	<body>
		<div class="web">
			<div class="mae">
				<div class="topo">
					<img src="/images/logo.jpg" alt="Seek" />
					
                    <!--
                    <ul>
                    	<li>Olá <strong>NOME</strong></li>
                    	<li>Último acesso em XX/XX/XXXX</li>
                    </ul>
                    -->
                    
				</div>
                
				<div class="menu">
					<div id="lr"><img src="/images/lrmenu.jpg" /></div>
					<ul>
						<a href="#"><li>Inicial</li></a>	
					</ul>
					<div id="rr"><img src="/images/rrmenu.jpg" /></div>
                    <ul id="opt">
                    	<a href="#"><li>Configurações</li></a>
                    	<a href="#"><li id="sair">Sair</li></a>
                    </ul>
				</div>
                
				<div class="meio">
                
					<div class="left">
                    		
						<div class="novo">
							<a href="#">NOVO PROJETO</a>
						</div>
						<div class="box">
							<h1>
                            	<div id="lr"></div>
                            	<span>Projetos</span>
                            	<div id="rr"></div>
                            </h1>
                            
                            <% for projeto in @projetos %>
                            
                            <div class="projetos">
                            <% if params[:id] == projeto.id.to_s %>
                            	<h2 class="sel">
                            <% else %>		
                            	<h2 class="unsel">
                            <% end %>
                            		<a href="#"><%= projeto.Nome %></a>
                            		<img src="/images/exp_opt.png" />
                            	</h2>
								<div class="accordion">
                                    <ul>
                                        <li><a href="#">123</a></li>
                                        <li><a href="#">123</a></li>
                                        <li><a href="#">123</a></li>
                                        <li><a href="#">13</a></li>
                                    </ul>
                                </div>
							</div>
							
                            <% end %>
                            
						</div>
					</div>
                    
					<div class="right">
						<div id="conteudo">
                        	<!--
                            <h1>
                            	<div id="lr"></div>
                            	<ul>
                            		<li id="sel"><a href="#">aba</a></li>
                            		<li><a href="#">aba</a></li>
                            	</ul>
                            	<div id="rr"></div>
                            </h1>
                            -->
							<div class="box">
								<%= yield  %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>