<h1>Listing tarefas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descricao</th>
    <th>Dtinicio</th>
    <th>Dttermino</th>
    <th>Prioridade</th>
    <th>Status</th>
    <th>Progresso</th>
  </tr>

<% for tarefa in @tarefas %>
  <tr>
    <td><%=h tarefa.Nome %></td>
    <td><%=h tarefa.Descricao %></td>
    <td><%=h tarefa.DtInicio %></td>
    <td><%=h tarefa.DtTermino %></td>
    <td><%=h tarefa.Prioridade %></td>
    <td><%=h tarefa.Status %></td>
    <td><%=h tarefa.Progresso %></td>
    <td><%= link_to 'Show', tarefa %></td>
    <td><%= link_to 'Edit', edit_tarefa_path(tarefa) %></td>
    <td><%= link_to 'Destroy', tarefa, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

