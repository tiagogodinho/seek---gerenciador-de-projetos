<% form_for([@projeto, @tarefa]) do |f| %>
<%= f.error_messages %>
<ul class="orcamento">
	<li>
		Nome
	</li>
	<li>
		<%= f.text_field :Nome, :class => "txt" %>
	</li>
	<li>
		Descrição
	</li> 
	<li>
		<%= f.text_area :Descricao %>
	</li>
	<li>
		Data de Início
	</li> 
	<li>
		<%= f.text_field :DtInicio, :id => "data_inicio", :class => "txt" %>
	</li>
	<li>
		Data de Término
	</li> 
	<li>
		<%= f.text_field :DtTermino, :id => "data_termino",  :class => "txt" %>
	</li>
	<li>
		Prioridade
	</li>
	<li>
		<%= f.text_field :Prioridade, :class => "txt" %>
	</li>
	<li>
		Status
	</li>
	<li>
		<%= f.check_box :Status%>
	</li>
	<li>
		Progresso
	</li>
	<li>
		<%= f.text_field :Progresso, :class => "txt" %>
	</li>
	<li>
		<%= f.submit "SALVAR", :class => "sub" %>
	</li>
</ul>
<% end %>

<script type="text/javascript">
  $(function(){
    $("#data_inicio").datepicker({showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true}, $.datepicker.regional['pt-BR']);
    $("#data_termino").datepicker({showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true}, $.datepicker.regional['pt-BR']);
  });
</script>